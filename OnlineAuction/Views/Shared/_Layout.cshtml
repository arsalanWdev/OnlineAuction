    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/OnlineAuction.styles.css" asp-append-version="true" />
    <style>
        body{
            font-family: Arial Narrow, sans-serif;
        }
        /* Your existing styles */
        .btn-primary {
            color: #212529;
            background-color: #D19C97;
            border-color: #D19C97;
        }

            .btn-primary:hover {
                color: #fff;
                background-color: #c5837c;
                border-color: #c17a74;
            }

            .btn-primary:focus, .btn-primary.focus {
                color: #fff;
                background-color: #c5837c;
                border-color: #c17a74;
                box-shadow: 0 0 0 0.2rem rgba(183, 138, 135, 0.5);
            }

            .btn-primary.disabled, .btn-primary:disabled {
                color: #212529;
                background-color: #D19C97;
                border-color: #D19C97;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Topbar Start -->
        <div class="row align-items-center py-3 px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold">
                        <span class="text-primary font-weight-bold border px-1 mr-1">Online</span>Auction
                    </h1>
                </a>
            </div>
            <div class="col-lg-6 col-6 text-left">
                <form asp-controller="Products" asp-action="Search" method="get">
                    <div class="input-group">
                        <input type="text" class="form-control" name="query" placeholder="Search for products">
                        <div class="input-group-append">
                            <button type="submit" class="input-group-text bg-transparent text-primary">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            @*  <div class="col-lg-3 col-6 text-right">
            <a href="" class="btn border">
            <i class="fas fa-shopping-cart text-primary"></i>
            <span class="badge">0</span>
            </a>
            </div> *@
        </div>
        <!-- Topbar End -->
        <!-- Navbar Start -->
        <div class="container-fluid">
            <div class="row border-top px-xl-5">
                <div class="col-lg-3 d-none d-lg-block">
