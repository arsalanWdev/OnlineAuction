                        </div>
                        } *@
                        <a href="" class="text-decoration-none d-block d-lg-none">
                            <h1 class="m-0 display-5 font-weight-semi-bold">
                                <span class="text-primary font-weight-bold border px-3 mr-1">Online</span>Auction
                            </h1>
                        </a>
                        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                            <div class="navbar-nav mr-auto py-0">
                                <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
@*                                 <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="DetailPage">Detail</a> *@
@*                                 <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Checkout">Checkout</a> *@
                                @*  <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Pages</a>
                                <div class="dropdown-menu rounded-0 m-0">
                                <a href="cart.html" class="dropdown-item">Shopping Cart</a>
                                <a href="checkout.html" class="dropdown-item">Checkout</a>
                                </div>
                                </div> *@
                                <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                            </div>
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="navbar-nav">
                                    <a class="nav-item nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Admin Dashboard</a>
                                </div>
                            }

                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="navbar-nav">
                                    <a class="nav-item nav-link" asp-area="" asp-controller="Products" asp-action="Index">My Items</a>
                                </div>
                            }
                            <div class="navbar-nav ml-auto py-0">
                                <partial name="_loginpartial"></partial>
                                @* <a href="../Views/Shared/_LoginPartial.cshtml" class="nav-item nav-link">Login</a>
                                <a href="" class="nav-item nav-link">Register</a> *@
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
        <!-- Navbar End -->

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

